{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:json/recommended",
    "plugin:markdown/recommended",
    "plugin:react/recommended",
    "airbnb",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "global-require": 0
  }
}
